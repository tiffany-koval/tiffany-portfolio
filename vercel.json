{
  "version": 2,
  "builds": [
    {
      "src": "api/spotify.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/spotify",
      "dest": "/api/spotify.js"
    },
    {
      "src": "/api/last-song",
      "dest": "/api/spotify.js"
    },
    {
      "src": "/api/callback",
      "dest": "/api/spotify.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}


