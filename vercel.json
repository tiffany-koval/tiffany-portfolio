{
  "version": 2,
  "builds": [
    {
      "src": "api/spotify.js",
      "use": "@vercel/node"  // Use default Node.js builder for Edge Functions
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/spotify",
      "dest": "/api/spotify.js"
    },
    {
      "src": "/api/last-song",
      "dest": "/api/spotify.js"
    },
    {
      "src": "/api/callback",
      "dest": "/api/spotify.js"
    },
    {
      "src": "/index.html",
      "dest": "/public/index.html"
    },
    {
      "src": "/styles.css",
      "dest": "/public/styles.css"
    },
    {
      "src": "/index.js",
      "dest": "/public/index.js"
    },
    {
      "src": "/audio/(.*)",
      "dest": "/public/audio/$1"
    },
    {
      "src": "/img/(.*)",
      "dest": "/public/img/$1"
    },
    {
      "src": "/fonts/(.*)",
      "dest": "/public/fonts/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}


